<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_presupuesto_form" model="ir.ui.view">
        <field name="name">Vista formulario de presupuesto de peliculas</field>
        <field name="model">presupuesto</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <widget name="web_ribbon" title="Archivado" bg_color="bg-danger" invisible="active == True"/>
                    <field name="image_1920" widget="image" class="oe_avatar" options="{'size':[600,]}"/>
                    <div class="oe_title">
                        <div class="o_row">
                            <field name="active" invisible="1"/>
                            <h1 style="display: flex;">
                                <field name="name" placeholder="Nombre de la pelicula" required="1" default_focus="1" class="oe_inline"/>
                            </h1>
                            <field name="puntuacion" widget="percentpie" style="padding-left: 10px" class="oe_inline"/>
                            <field name="puntuacion2" placeholder="Puntuacion de usuario" class="oe_edit_only oe_inline" />
                        </div>
                        <div class="o_row">
                            <field name="clasificacion" required="1"/>
                            <span class="fa fa-circle" invisible="clasificacion == False and fch_estreno == False" style="font-size: 8px; padding: 5px 5px"/>
                            <field name="fch_estreno"/>
                        </div>
                        <div class="o_row">
                            <field name="genero_ids" widget="many2many_tags"/>
                        </div>
                    </div>
                    <group string="Datos Principales" style="margin-top: -10px;">
                        <field name="vista_general" placeholder="Vista general..."/>
                        <group>
                            <field name="director_id"/>
                            <field name="link_trailer"/>
                        </group>
                        <group>
                            <field name="es_libro" widget="boolean_toggle"/>
                            <field name="libro" filename="libro_filename" invisible="es_libro == False"/>
                            <field name="libro_filename" invisible="1"/>
                        </group>

                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>